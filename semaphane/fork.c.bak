#include <stdlib.h>
#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include "sem_com.h"

#define DELAY_TIME 5

int main(void)
{
	pid_t result;
	int sem_id;
	
	sem_id=semget(ftok(".",'a'),1,0666|IPC_CREAT);
	init_sem(sem_id,0);
	
	result=fork();
	if(result==-1)
	{
		perror("Fork\n");
//		return -1;
	}
	else if(result==0)//child
	{
		printf("Child process will wait for some seconds...\n");
		sleep(DELAY_TIME);
		printf("The returned value is %d in the child process (PID = %d)\n",result,getpid());
		sem_v(sem_id);
	}
	else//father
	{
		sem_p(sem_id);
		 printf("The returned value is %d in the father process (PID = %d)\n",result,getpid());
                 sem_v(sem_id);
	}
	exit(0);
}
